rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Helper function to check if user has specific permission
    function hasPermission(permission) {
      return isAdmin() && 
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.includes(permission);
    }
    
    // Only authenticated users can read their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins collection - only super admins can manage admins
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow create: if isSuperAdmin();
      allow update, delete: if isSuperAdmin() && adminId != request.auth.uid; // Prevent self-deletion
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products (for public catalog)
      allow read: if true;
      
      // Only admins with product_management permission can create/update/delete products
      allow create: if hasPermission('product_management');
      allow update, delete: if hasPermission('product_management');
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      
      // Only admins with category_management permission can manage categories
      allow create: if hasPermission('category_management');
      allow update, delete: if hasPermission('category_management');
    }
    
    // SubCategories collection
    match /subCategories/{subCategoryId} {
      // Anyone can read subcategories
      allow read: if true;
      
      // Only admins with category_management permission can manage subcategories
      allow create: if hasPermission('category_management');
      allow update, delete: if hasPermission('category_management');
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      
      // Admins with order_management permission can read all orders
      allow read: if hasPermission('order_management');
      
      // Only admins with order_management permission can update orders
      allow update: if hasPermission('order_management');
      
      // Only admins with order_management permission can delete orders
      allow delete: if hasPermission('order_management');
    }
    
    // Packing sessions collection
    match /packingSessions/{sessionId} {
      // Only admins with order_management permission can manage packing sessions
      allow read, create, update, delete: if hasPermission('order_management');
    }
    
    // Inventory/Stock management
    match /inventory/{itemId} {
      // Only admins with product_management permission can manage inventory
      allow read, create, update, delete: if hasPermission('product_management');
    }
    
    // System settings (only super admins)
    match /settings/{settingId} {
      allow read, create, update, delete: if isSuperAdmin();
    }
    
    // Audit logs (only super admins)
    match /auditLogs/{logId} {
      allow read: if isSuperAdmin();
      allow create: if request.auth != null; // System can create logs
      allow update, delete: if false; // Logs are immutable
    }
    
    // Public collections (accessible to everyone)
    match /public/{docId} {
      allow read: if true;
      allow write: if false; // Public data is read-only
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
